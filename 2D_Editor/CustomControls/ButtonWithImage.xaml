<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:_2D_Editor.CustomControls">
    <Style TargetType="local:ButtonWithImage">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:ButtonWithImage">
                    <Border >
                        <StackPanel Orientation="Horizontal">
                            <Canvas Width="30" Height="30">
                                <Rectangle Width="30" Height="30" Canvas.Left="0" Canvas.Top="0" Fill="Azure" Visibility="Visible" />
                                <Image Source="/Images/toggle_hide.png" Canvas.Left="0" Canvas.Top="0"  Width="30" Height="30"/>
                            </Canvas>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>